@using Microsoft.AspNetCore.Identity
@using LostArkOffice.Models.DataModels;
@inject SignInManager<Usuario> SignInManager

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - LostArkOffice</title>
</head>
<body>
    <header>
        <!-- Aquí puedes incluir la barra de navegación y otros elementos del encabezado -->
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">LostArk Office</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">Menu de Jugador</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Administrar Eleneco</a></li>
                                <li><a class="dropdown-item" href="#">Configurar Horario</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">Menu de Oficial</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item">Configurar una Raid</a></li>
                                <li><a class="dropdown-item">Ver/Modificar Calendario</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">Admin de Gremio</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item">Establecer Habilidad Jugadores</a></li>
                                <li><a class="dropdown-item">Menú de Gremio</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false" asp-controller="SuperAdmin" asp-action="Index">Super Administrador</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="SuperAdmin" asp-action="Usuarios">Usuarios</a></li>
                                <li><a class="dropdown-item" asp-controller="SuperAdmin" asp-action="Gremios">Gremios</a></li>
                                <li><a class="dropdown-item" asp-controller="SuperAdmin" asp-action="TiposDeRaid">Tipos De Raid</a></li>
                                <li><a class="dropdown-item" asp-controller="SuperAdmin" asp-action="ClasesDePersonaje">Clases De Personajes</a></li>
                                <li><a class="dropdown-item" asp-controller="SuperAdmin" asp-action="Personajes">Personajes</a></li>
                                <li><a class="dropdown-item" asp-controller="SuperAdmin" asp-action="Disponibilidades">Disponibilidades</a></li>
                                <li><a class="dropdown-item" asp-controller="SuperAdmin" asp-action="Raids">Raids</a></li>
                                <li><a class="dropdown-item" asp-controller="SuperAdmin" asp-action="Roles">Roles</a></li>
                            </ul>
                        </li>
                    </ul>
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container">
        <div class="row mt-2"><div id="titulovista" class="col text-center"><h1>@ViewBag.Title</h1></div></div>
        <!-- RenderBody() es donde se renderizarán las vistas específicas de cada página -->
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-3">

    </footer>
    <script type="module" src="~/dist/bundle.js"></script>
</body>
</html>