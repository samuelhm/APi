@model LostArkOffice.Models.ViewModels.SuperAdmin.UsuariosViewModel


<form id="crearUserForm" asp-controller="SuperAdmin" asp-action="CrearUser">
    <div class="form-group">
        <label asp-for="NombreUsuario" class="control-label"></label>
        <input asp-for="NombreUsuario" class="form-control" />
        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Crear Usuario</button>
</form>

<hr />

<!-- Tabla para mostrar los roles existentes -->
<table class="table">
    <thead>
        <tr>
            <th>Nombre del Usuario</th>
            <th>Gremio</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Usuarios)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Gremio?.Nombre</td>
                <td></td>
                <td>
                    <!-- Botón para editar -->
                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-info">Editar</a>

                    <!-- Botón para eliminar -->
                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>